{
  "name": "microservices-platform",
  "version": "1.0.0",
  "description": "ðŸŒ Enterprise microservices platform with Kubernetes, service mesh, and event-driven architecture",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:down": "docker-compose down",
    "logs": "docker-compose logs -f",
    "install:all": "npm install && npm run install:services",
    "install:services": "npm install --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "cypress run",
    "test:load": "k6 run tests/load/",
    "lint": "eslint services --ext .ts",
    "format": "prettier --write services",
    "db:migrate": "prisma migrate dev",
    "db:seed": "npm run db:seed --workspaces --if-present",
    "deploy:k8s": "kubectl apply -f k8s/",
    "deploy:helm": "helm install platform ./helm/platform",
    "deploy:argocd": "kubectl apply -f argocd/apps/"
  },
  "keywords": [
    "microservices",
    "kubernetes",
    "istio",
    "kafka",
    "event-driven",
    "distributed-systems",
    "grpc",
    "circuit-breaker",
    "saga"
  ],
  "author": "Dawit Tegegnwork",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
